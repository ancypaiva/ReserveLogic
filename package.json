{
  "name": "nodejs-api-boilerplate",
  "version": "1.0.0",
  "description": "Restful API boilerplate",
  "main": "src/index.js",
  "scripts": {
    "dev": "cross-env NODE_ENV=development nodemon src/index.js",
    "staging": "NODE_ENV=staging node src/index.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "docker:prod": "docker-compose -f docker-compose.yml -f docker-compose.prod.yml up",
    "docker:dev": "docker-compose -f docker-compose.yml -f docker-compose.dev.yml up",
    "docker:staging": "docker-compose -f docker-compose.yml -f docker-compose.staging.yml up",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prettier": "prettier --check **/*.js",
    "prettier:fix": "prettier --write **/*.js",
    "prepare": "husky install"
  },
  "author": "Armia Systems",
  "license": "ISC",
  "dependencies": {
    "@armiasystems/pushnotification": "1.0.0",
    "@armiasystems/s3-upload": "1.0.0",
    "bcryptjs": "2.4.3",
    "compression": "1.7.4",
    "cors": "2.8.5",
    "crypto-js": "4.1.1",
    "dotenv": "10.0.0",
    "express": "4.17.1",
    "express-mongo-sanitize": "2.1.0",
    "express-rate-limit": "5.5.1",
    "fcm-node": "1.6.1",
    "firebase-admin": "10.2.0",
    "helmet": "4.6.0",
    "http-status": "1.5.0",
    "joi": "17.4.2",
    "jsonwebtoken": "8.5.1",
    "lodash.forown": "4.4.0",
    "moment": "2.29.1",
    "mongoose": "6.0.12",
    "multer": "1.4.0",
    "nodemailer": "6.7.2",
    "passport": "0.5.0",
    "passport-jwt": "4.0.0",
    "path": "0.12.7",
    "pdf-creator-node": "2.3.4",
    "postmark": "3.0.1",
    "redis": "4.0.4",
    "swagger-jsdoc": "6.2.1",
    "swagger-ui-express": "4.4.0",
    "util": "0.12.4",
    "validator": "13.7.0",
    "winston": "3.3.3",
    "xss-clean": "0.1.1"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "eslint": "^8.2.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-security": "^1.4.0",
    "husky": "^7.0.0",
    "lint-staged": "^11.2.6",
    "nodemon": "^2.0.15",
    "prettier": "^2.4.1"
  },
  "lint-staged": {
    "*.js": "eslint --fix",
    "*.{js,css,md}": "prettier --write"
  }
}
